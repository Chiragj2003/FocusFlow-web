# ===========================================
# FocusFlow Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# Database (Required)
# Get a free Neon database at: https://neon.tech
DATABASE_URL="postgresql://username:password@host/database?sslmode=require"

# Clerk Authentication (Required)
# Get your keys at: https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...

# Clerk URLs (Required)
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# AI Habit Generation (Optional)
# Get your API key at: https://aistudio.google.com/apikey
# If not provided, the app will use local fallback generation
GEMINI_API_KEY=your_gemini_api_key_here

# ===========================================
# Email Services (Optional)
# ===========================================
# Get your API key at: https://resend.com
# Used for: Weekly reminder emails, Feedback form notifications
# If not provided, emails won't be sent (app still works)
RESEND_API_KEY=re_...

# App URL (For production)
NEXT_PUBLIC_APP_URL=https://your-domain.vercel.app
