// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id // Clerk user ID
  email         String?   // Optional, fetched from Clerk
  name          String?
  timezone      String    @default("UTC")
  lastEmailSent DateTime? @map("last_email_sent") // For weekly email rate limiting
  emailOptOut   Boolean   @default(false) @map("email_opt_out") // User can opt out of emails
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  habits  Habit[]
  entries HabitEntry[]
  badges  Badge[]

  @@map("users")
}

model Habit {
  id          String   @id @default(uuid())
  userId      String   @map("user_id")
  title       String
  description String?
  category    String?
  color       String   @default("#FFB4A2")
  goalType    String   @map("goal_type") // 'binary' | 'duration' | 'quantity'
  goalTarget  Int?     @map("goal_target")
  unit        String?  // 'times', 'minutes', 'pages', etc.
  active      Boolean  @default(true)
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  user    User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  entries HabitEntry[]

  @@index([userId, active]) // Speed up active habit queries
  @@index([userId, createdAt]) // Speed up sorting queries
  @@map("habits")
}

model HabitEntry {
  id        String   @id @default(uuid())
  habitId   String   @map("habit_id")
  userId    String   @map("user_id")
  entryDate DateTime @map("entry_date") @db.Date
  completed Boolean  @default(false)
  value     Float?   @default(0)
  notes     String?
  mood      Int?     // 1-5 scale for mood tracking
  energy    Int?     // 1-5 scale for energy level
  duration  Int?     // Actual duration in minutes (for timer tracking)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  habit Habit @relation(fields: [habitId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([habitId, userId, entryDate])
  @@index([userId, entryDate])
  @@map("habit_entries")
}

model Challenge {
  id          String   @id @default(uuid())
  title       String
  description String?
  duration    Int      @default(30) // Duration in days
  habits      Json     // Array of habit templates for the challenge
  category    String?
  difficulty  String   @default("medium") // easy, medium, hard
  active      Boolean  @default(true)
  createdAt   DateTime @default(now()) @map("created_at")

  participants ChallengeParticipant[]

  @@map("challenges")
}

model ChallengeParticipant {
  id          String    @id @default(uuid())
  challengeId String    @map("challenge_id")
  userId      String    @map("user_id")
  startedAt   DateTime  @default(now()) @map("started_at")
  completedAt DateTime? @map("completed_at")
  progress    Int       @default(0) // Days completed

  challenge Challenge @relation(fields: [challengeId], references: [id], onDelete: Cascade)

  @@unique([challengeId, userId])
  @@map("challenge_participants")
}

model Badge {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  name      String
  metadata  Json?
  awardedAt DateTime @default(now()) @map("awarded_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId]) // Speed up badge lookups
  @@map("badges")
}
